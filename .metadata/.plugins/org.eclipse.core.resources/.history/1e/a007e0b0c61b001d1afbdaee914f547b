	private JTextField textField_1;
	private JTextField textField_2;
	private JButton btnAdd;
	private JButton btnSubstract;
	private JButton btnMultiply;
	private JButton btnDivide;
	
	public YagizFrame() {
		getContentPane().setLayout(null);
		
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setSize(600,300);
		
		JLabel lblNewLabel = new JLabel("Number 1:");
		lblNewLabel.setFont(new Font("Cambria Math", Font.BOLD, 18));
		lblNewLabel.setBounds(10, 10, 110, 64);
		getContentPane().add(lblNewLabel);
		
		JLabel lblNumber = new JLabel("Number 2:");
		lblNumber.setFont(new Font("Cambria Math", Font.BOLD, 18));
		lblNumber.setBounds(10, 60, 110, 64);
		getContentPane().add(lblNumber);
		
		textField = new JTextField();
		textField.setBounds(116, 78, 439, 27);
		getContentPane().add(textField);
		textField.setColumns(10);
		
		textField_1 = new JTextField();
		textField_1.setBounds(116, 28, 439, 27);
		getContentPane().add(textField_1);
		textField_1.setColumns(10);
		
		JLabel lblResult = new JLabel("Result:");
		lblResult.setFont(new Font("Cambria Math", Font.BOLD, 18));
		lblResult.setBounds(10, 115, 110, 64);
		getContentPane().add(lblResult);
		
		textField_2 = new JTextField();
		textField_2.setEditable(false);
		textField_2.setColumns(10);
		textField_2.setBounds(116, 134, 439, 27);
		getContentPane().add(textField_2);
		
		btnAdd = new JButton("Add");
